<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelationActivity">

    <Button
        android:id="@+id/btnCreateStudentForOneToOneRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Student for One-to-One Relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGetAllStudentsWithOneToOneRelationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get All Students With One-to-One Relationship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateStudentForOneToOneRelation" />

    <Button
        android:id="@+id/btnCreateStudentForOneToManyRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:text="Create Student for One-to-Many Relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGetAllStudentsWithOneToOneRelationship" />

    <Button
        android:id="@+id/btnGetAllStudentsWithOneToManyRelationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:text="Get All Students With One-to-Many Relationship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateStudentForOneToManyRelation" />

    <Button
        android:id="@+id/btnCreateStudentForManyToManyRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Create Student for Many-to-Many Relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGetAllStudentsWithOneToManyRelationship" />

    <Button
        android:id="@+id/btnGetAllStudentsWithManyToManyRelationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Get All Students With Many-to-Many Relationship"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateStudentForManyToManyRelation" />

    <EditText
        android:id="@+id/etStudentIdInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Enter Student ID for Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCreateAddressForOneToOneRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Address For One-to-One Relation"

        app:layout_constraintTop_toBottomOf="@id/etStudentIdInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCreateAddressForOneToManyRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"

        android:text="Create Address For One-to-Many Relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAddressForOneToOneRelation" />

    <Button
        android:id="@+id/btnCreateAddressForManyToManyRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"

        android:text="Create Address For Many-to-Many Relation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCreateAddressForOneToManyRelation" />

    <Switch
        android:id="@+id/swReuseLastAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reuse Last Address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateAddressForManyToManyRelation" />

</androidx.constraintlayout.widget.ConstraintLayout>